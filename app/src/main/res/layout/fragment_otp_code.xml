<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context=".app.fragments.registration.OtpCodeFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/have_an_account"
        android:src="@drawable/ic_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/enter_otp"
        android:textColor="@color/grey_logo"
        android:textFontWeight="700"
        android:textSize="20sp"
        tools:targetApi="31" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/raleway_semibold"
        android:gravity="center"
        android:text="@string/enter_otp_instruction"
        android:textColor="@color/grey_logo"
        android:textFontWeight="600"
        android:textSize="16sp"
        tools:targetApi="31" />

    <com.chaos.view.PinView
        android:id="@+id/pinView"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="38dp"
        android:cursorVisible="true"
        android:inputType="number"
        app:itemCount="6"
        app:itemHeight="60dp"
        app:itemRadius="20dp"
        app:itemSpacing="10dp"
        app:itemWidth="40dp"
        app:lineColor="@color/middle_light_gray"
        app:lineWidth="1dp"
        app:viewType="rectangle" />

    <TextView
        android:id="@+id/tvLoginError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nunito"
        android:text="@string/empty_text_error"
        android:textColor="#EF0000"
        android:textFontWeight="600"
        android:textSize="11sp"
        tools:targetApi="31" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:background="@drawable/on_boarding_button_background"
        android:backgroundTint="@color/primary_red"
        android:paddingHorizontal="16dp"
        android:text="@string/confirm"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvResendCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/raleway_semibold"
        android:gravity="center"
        android:text="@string/resend_code_detail"
        android:textColor="@color/grey_logo"
        android:textFontWeight="600"
        android:textSize="16sp"
        tools:targetApi="31" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_gravity="center"
        android:fontFamily="@font/raleway_semibold"
        android:text="@string/resend_code_again"
        android:textColor="@color/primary_red"
        android:textFontWeight="600"
        android:textSize="12sp"
        tools:targetApi="31" />

</LinearLayout>