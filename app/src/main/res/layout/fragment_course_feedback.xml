<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.fragments.course.CourseFeedbackFragment">

    <LinearLayout
        android:id="@+id/llRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/middle_light_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rating_in_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/_4_1"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <RatingBar
                android:id="@+id/rating_in_stars"
                style="@style/CustomRatingBar"
                android:layout_width="160dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:stepSize="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/pb_5"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="7dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:progress="85"
                    android:progressDrawable="@drawable/progess_bar_background" />

                <TextView
                    android:id="@+id/pg_5_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/raleway"
                    android:text="@string/_34"
                    android:textColor="@color/grey_logo"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/pb_4"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="7dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:progress="55"
                    android:progressDrawable="@drawable/progess_bar_background" />

                <TextView
                    android:id="@+id/pg_4_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/raleway"
                    android:text="@string/_25"
                    android:textColor="@color/grey_logo"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/pb_3"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="7dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:progress="35"
                    android:progressDrawable="@drawable/progess_bar_background" />

                <TextView
                    android:id="@+id/pg_3_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/raleway"
                    android:text="@string/_13"
                    android:textColor="@color/grey_logo"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/pb_2"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="7dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:progress="85"
                    android:progressDrawable="@drawable/progess_bar_background" />

                <TextView
                    android:id="@+id/pg_2_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/raleway"
                    android:text="@string/_46"
                    android:textColor="@color/grey_logo"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/pb_1"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="7dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:progress="15"
                    android:progressDrawable="@drawable/progess_bar_background" />

                <TextView
                    android:id="@+id/pg_1_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/raleway"
                    android:text="@string/_2"
                    android:textColor="@color/grey_logo"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/give_feedback_requirements"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/raleway_semibold"
        android:textFontWeight="400"
        tools:targetApi="31"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llRating"
        android:text="@string/add_feedback_requirements"
        android:textColor="@color/black_blacker"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/feedbackHeader"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/raleway_semibold"
        android:textFontWeight="400"
        tools:targetApi="31"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/give_feedback_requirements"
        android:text="@string/course_feedback"
        android:textColor="@color/black_blacker"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFeedback"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feedbackHeader"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_feedbacks"
        />



</androidx.constraintlayout.widget.ConstraintLayout>