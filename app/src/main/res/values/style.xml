<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LearningsToolbar">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LearningsTabFont" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_logo</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="background">@android:color/transparent</item>
    </style>
